{
  "name": "typescript-microservice-boilerplate",
  "description": "Example",
  "version": "0.0.5",
  "private": true,
  "author": "Zac Anger <zac@zacanger.com> (https://zacanger.com)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier \"src/**/*.ts\" --write",
    "prebuild": "npm t",
    "preversion": "npm t && sortpack",
    "start": "nodemon",
    "test": "npm run test:lint && sortpack",
    "test:lint": "eslint -c .eslintrc.json src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jane/typescript-microservice-boilerplate.git"
  },
  "keywords": [
    "docker",
    "jenkins",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "@koa/router": "8.0.1",
    "boring-cluster": "6.0.0",
    "koa": "2.8.1",
    "koa-bodyparser": "4.2.1",
    "koa-compress": "3.0.0"
  },
  "devDependencies": {
    "@types/koa": "2.0.49",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-compress": "2.0.9",
    "@types/koa-router": "7.0.42",
    "@types/koa__router": "8.0.0",
    "@types/node": "12.7.5",
    "eslint": "6.3.0",
    "eslint-plugin-jane": "7.0.0",
    "husky": "3.0.5",
    "lint-staged": "9.2.5",
    "nodemon": "1.19.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "sortpack": "2.0.0",
    "ts-node": "8.3.0",
    "typescript": "3.6.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
