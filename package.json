{
  "name": "typescript-microservice-boilerplate",
  "description": "Example",
  "version": "0.1.0",
  "private": true,
  "author": "Zac Anger <zac@zacanger.com> (https://zacanger.com)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ]; then coveralls < coverage/lcov.info; fi || true | node -e ''",
    "format": "prettier \"src/**/*.ts\" --write",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "start": "nodemon",
    "test": "run-s -s test:ts test:lint test:jest",
    "test:build": "run-s test:ts test:lint cover coveralls",
    "test:jest": "NODE_ENV=test jest",
    "test:lint": "eslint -c .eslintrc.json src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-microservice-boilerplate.git"
  },
  "keywords": [
    "docker",
    "jenkins",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "@koa/router": "8.0.2",
    "boring-cluster": "6.0.3",
    "koa": "2.11.0",
    "koa-bodyparser": "4.2.1",
    "koa-compress": "3.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/koa": "2.11.0",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-compress": "2.0.9",
    "@types/koa-router": "7.0.42",
    "@types/koa__router": "8.0.2",
    "@types/node": "12.12.14",
    "@types/supertest": "2.0.8",
    "coveralls": "3.0.9",
    "eslint": "6.7.1",
    "eslint-plugin-jane": "7.0.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "nodemon": "2.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "sortpack": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.2",
    "typescript": "3.7.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "resetMocks": true,
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|lib)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
